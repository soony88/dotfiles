" set line numbers
set nu

" set 7 lines to the curser when moving vertically using j/k
set so=7

" always show current position
set ruler

" searching casing and highlighting
set ignorecase
set smartcase
set hlsearch
set incsearch

" colors/fonts/syntax
syntax enable
colorscheme monokai

" tabbing
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

" line breaks
set lbr
set tw=500

" indenting/wrapping
set ai
set si
set wrap

" Make backspce work like normal
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
